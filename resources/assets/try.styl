.try-phug
    position fixed
    height calc(100% - 50px)
    top 50px
    left 0
    right 0
    opacity 0
    transition opacity 0.15s ease-in-out

    iframe
        position absolute
        top 10px
        bottom 10px
        left 10px
        right 10px

.try-phug.show
    opacity 1
    z-index 1001
