a.home(href="/")
    img(src="img/pug.png" alt="Phug" width="50" height="50")
    h1 Phug
button.navbar-toggler(type="button" data-toggle="offcanvas" data-close="try" aria-label="Toggle sidebar")
    span.navbar-toggler-icon

nav.collapse.navbar-collapse
    .navbar-nav.mr-auto.d-none.d-lg-flex
        a.nav-item.nav-link#try-link(href="#try" data-toggle="try") Try Phug
        a.nav-item.nav-link(href="#language" data-close="try") Language Reference
        a.nav-item.nav-link(href="#resources" data-close="try") Resources
        a.nav-item.nav-link(href="https://github.com/phug-php/phug/" data-close="try") GitHub

.languages
    each locale in locales
        a(href=route('lang', {locale: locale}))
            img(src="img/flag-" + locale + ".png" width="24" height="24")
